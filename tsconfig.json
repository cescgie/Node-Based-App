{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": false,
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@helpers/*": ["src/helpers/*"],
            "@interfaces": ["src/interfaces/index"],
            "@models/*": ["src/models/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/.baseDir.ts",
        "**/*.spec.ts"
    ]
}